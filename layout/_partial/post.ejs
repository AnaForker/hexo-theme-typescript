<article class="post">
  <h2 class="title">
    <a href="<%- url_for(post.path) %>">
      <%= post.title %>
    </a>
  </h2>
  <time>
    <%= date(post.date, 'MMM D, YYYY') %>
  </time>
  <section class="content">
	  <%- post.content %>
	  
	  <div class="tags">
		  <% if (post.tags && post.tags.length){ %>
        <%- list_tags(post.tags, {
          show_count: false,
          style: 'none',
          separator: ''
        }) %>
      <% } %>
	  </div>
  </section>
</article>